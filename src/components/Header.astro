---
import ThemeToggle from './ThemeToggle.astro';
---
<header class="mb-8">
  <div class="flex items-center justify-between mb-4">
    <div class="flex items-center gap-4">
      <img
        src="https://github.com/juanibiapina.png"
        alt="Juan Ibiapina"
        class="w-16 h-16 rounded-full"
      />
      <div>
        <h1 class="text-2xl font-bold text-gray-900 dark:text-white">Juan Ibiapina</h1>
        <p class="text-gray-600 dark:text-gray-400">Software Engineer</p>
      </div>
    </div>
    <ThemeToggle />
  </div>
  <div class="flex gap-4">
    <a href="/" class="flex items-center gap-1 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">
      <i class="fas fa-user text-xl" aria-hidden="true"></i>
      About
    </a>
    <a href="/blog" class="flex items-center gap-1 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">
      <i class="fas fa-home text-xl" aria-hidden="true"></i>
      Blog
    </a>
    <a href="https://github.com/juanibiapina" class="flex items-center gap-1 text-gray-600 dark:text-gray-400 hover:text-gray-900 dark:hover:text-white">
      <i class="fab fa-github text-xl" aria-hidden="true"></i>
      GitHub
    </a>
  </div>
</header>
